<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/card_style_edit"
    android:gravity="center"
    android:minHeight="150dp">

    <TextView
        android:id="@+id/booking_item_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_weight="1"
        android:text="日期：2019-01-01"
        android:textColor="#000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/booking_item_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="时间：星期六上午"
        android:textColor="#000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/booking_item_text_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="周次：第20周"
        android:textColor="#000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/booking_item_text_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="老师：一二三"
        android:textColor="#000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/booking_item_text_hasbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="已预约：100人"
        android:textColor="#000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/booking_item_text_canbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="可预约：100人"
        android:textColor="#000"
        android:textSize="30sp" />
</LinearLayout>
