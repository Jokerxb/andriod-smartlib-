<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bkg_content"

    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/repair_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:text="设备报修"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="55sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/repair_imageButton_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_dialog" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/repair_text_teacherid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教师账号"
            android:textColor="#000"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/repair_edit_teacherid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="9"
            android:inputType="textPersonName"
            android:textColor="#EE0000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/repair_text_teachername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教师姓名"
            android:textColor="#000"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/repair_edit_teachername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#EE0000"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/repair_text_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="实验室"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/repair_edit_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#3A5FCD"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/repair_text_report_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报修日期"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/repair_edit_report_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#3A5FCD"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/repair_text_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桌号"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textSize="35sp" />

        <Spinner
            android:id="@+id/repair_spinner_table"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:entries="@array/tableNum"
            android:gravity="center"
            android:outlineAmbientShadowColor="#3A5FCD"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/repair_text_instrumentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:text="设备"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textSize="35sp" />

        <Spinner
            android:id="@+id/repair_spinner_instrumentName"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:entries="@array/instrumentName"
            android:gravity="center"
            android:outlineAmbientShadowColor="#3A5FCD"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/repair_text_instrumentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_weight="1"
            android:text="仪器编号"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/repair_edit_report_instrumentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:inputType="textPersonName"
            android:textColor="#3A5FCD"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/repair_text_damageInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故障"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/repair_edit_damageInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="26"
            android:inputType="textPersonName"
            android:textColor="#3A5FCD"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/repair_text_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/repair_edit_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="26"
            android:inputType="textPersonName"
            android:textColor="#3A5FCD"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:id="@+id/repair_button_submit"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="提交" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/repair_text_reportLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="维修记录"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0000CD"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/repair_text_repairDeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:text="维修处理"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0000CD"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>